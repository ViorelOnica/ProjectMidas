<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameArea">

        <ProgressBar
            android:id="@+id/bufferingProgressBar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/usernameTextView"
            android:indeterminateTint="#50b1a6"
            android:visibility="invisible" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/avatarImageButton"
            android:src="@drawable/no_image_icon"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usernameTextView"
            android:text="Username"
            android:textSize="22sp"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/avatarImageButton"
            android:layout_marginLeft="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            android:layout_below="@+id/avatarImageButton"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/birthdateArea"
        android:layout_below="@id/usernameArea"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birthdateTextView"
            android:text="Birthdate"
            android:textSize="22sp"
            android:textColor="#fff"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="17.5dp"
            android:layout_marginBottom="17.5dp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            android:layout_below="@+id/birthdateTextView"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentCityArea"
        android:layout_below="@id/birthdateArea"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentCityTextView"
            android:text="Current city"
            android:textSize="22sp"
            android:textColor="#fff"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="17.5dp"
            android:layout_marginBottom="17.5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            android:layout_below="@+id/currentCityTextView"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNumberArea"
        android:layout_below="@id/currentCityArea"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneNumberTextView"
            android:text="Phone number"
            android:textSize="22sp"
            android:textColor="#fff"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="17.5dp"
            android:layout_marginBottom="17.5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            android:layout_below="@+id/phoneNumberTextView"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPasswordArea"
        android:layout_below="@id/phoneNumberArea"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editPasswordTextView"
            android:text="Edit password"
            android:textSize="22sp"
            android:textColor="#fff"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="17.5dp"
            android:layout_marginBottom="17.5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            android:layout_below="@+id/editPasswordTextView"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        >
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/doneButton"
            android:src="@drawable/rectangle_shape"
            android:background="@null"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doneTextView"
            android:text="Done"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</RelativeLayout>