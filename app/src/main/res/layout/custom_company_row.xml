<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/companyRelativeLayout"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoAndTitle"
        >
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/logo"
            android:src="@drawable/no_photo"
            android:layout_margin="20.75dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/companyNameTextView"
            android:text="Company name"
            android:textSize="26sp"
            android:textColor="#fff"
            android:layout_toRightOf="@id/logo"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gradeTextView"
        android:text="0.0"
        android:textSize="26sp"
        android:textColor="#fff"
        android:layout_alignParentRight="true"
        android:layout_margin="35dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/starsArea"
        android:layout_below="@+id/logoAndTitle"
        android:layout_margin="15dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/star1"
            android:src="@drawable/white_star_icon"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/star2"
            android:src="@drawable/white_star_icon"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/star3"
            android:src="@drawable/white_star_icon"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/star4"
            android:src="@drawable/white_star_icon"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/star5"
            android:src="@drawable/white_star_icon"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nReviewsTextView"
        android:text="n Reviews"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/starsArea"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textStyle="italic"
        android:textColor="#B3ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/nReviewsTextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/horizontalLine"
        android:background="#fff"
        android:layout_below="@+id/authorTextView"
        android:layout_marginTop="5dp"
        />


    <ProgressBar
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/bufferingProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@id/horizontalLine"
        android:layout_marginBottom="5dp"
        android:indeterminateTint="#50b1a6"
        android:visibility="invisible"
        />

</RelativeLayout>