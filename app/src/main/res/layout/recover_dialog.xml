<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_shape"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailArea"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirmPasswordArea"
        android:layout_marginTop="15dp"
        >

        <ImageView
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:id="@+id/emailIcon"
            android:src="@drawable/email_icon"
            android:layout_centerVertical="true"
            />
        <com.example.sunquest.midas_project.CustomEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailEditText"
            android:textColor="#fff"
            android:textSize="20sp"
            android:hint="E-mail"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:textColorHint="#B3ffffff"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/emailIcon"
            />
        <View
            android:layout_width="175dp"
            android:layout_height="1dp"
            android:background="#fff"
            android:layout_below="@id/emailEditText"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/emailIcon"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailArea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recoverArea"
            >
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/recoverImageButton"
                android:src="@drawable/rectangle_shape"
                android:background="@null"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recover"
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelArea"
            android:layout_toRightOf="@id/recoverArea"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            >
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/cancelImageButton"
                android:src="@drawable/rectangle_shape"
                android:background="@null"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>